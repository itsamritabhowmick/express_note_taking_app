<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Note App</title>
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/css/bootstrap.min.css"
    />
  </head>
  <body class="bg-danger text-white">
    <h1 class="text-center my-5">Note Taking app</h1>
    <main>
      <div class="container bg-light text-dark p-4" style="border-radius: 15px">
        <form method="post" action="/">
          <div class="mb-3">
            <label for="noteHead" class="form-label">Note Heading</label>
            <input
              type="text"
              class="form-control"
              id="noteHead"
              name="nhead"
            />
          </div>

          <div class="mb-3">
            <label for="noteDesc" class="form-label">Note Descripton</label>
            <textarea
              class="form-control"
              id="noteDesc"
              rows="3"
              name="ndesc"
            ></textarea>
          </div>

          <button type="submit" class="btn btn-primary">Add Note</button>
        </form>
      </div>
      <div class="container my-5">
        <h3 class="text-center">My Notes</h3>
        <% if (noteObject.length > 0) { %>
        <table class="table">
          <thead>
            <tr>
              <th scope="col">#</th>
              <th scope="col">Note Heading</th>
              <th scope="col">Descripton</th>
              <th scope="col">Actions</th>
            </tr>
          </thead>
          <tbody>
            <% noteObject.forEach((val,pos)=>{%>
            <tr>
              <th scope="row"><%= pos+1%></th>
              <td><%= val.nhead%></td>
              <td><%= val.ndesc%></td>
              <td>
                <a
                  class="btn btn-danger"
                  href="/delete/<%= val.id %>"
                  role="button"
                  >Delete</a
                >
              </td>
            </tr>
            <%})%>
          </tbody>
        </table>
        <% }else{%>
        <p class="text-center">No Note found</p>
        <%}%>
      </div>
    </main>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
